<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.APP.DayNight.Tertiary">
        <item name="android:windowBackground">@drawable/shape_win_bg_gradient</item>
