<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">none</item>
        <item name="android:windowAnimationStyle">@style/AppWindowAnimation</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowAnimationStyle">@style/LauncherWindowAnimation</item>
    </style>

    <style name="AppTheme.Launcher.Translucent">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowAnimationStyle">@style/MainWindowAnimation</item>
    </style>

    <style name="AppTheme.ScanLogin">
        <item name="android:windowAnimationStyle">@style/ScanLoginWindowAnimation</item>
    </style>

    <style name="AppTheme.Full">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Minor指竖屏模式下的宽度 -->
        <item name="android:windowMinWidthMinor">375dp</item>
        <item name="windowFixedWidthMinor">375dp</item>
    </style>

    <style name="AppWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
    </style>

    <style name="LauncherWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_fade_out</item>
    </style>

    <style name="MainWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="ScanLoginWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_bottom_out</item>
    </style>

    <style name="DexOrdersTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/fs_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.TransactionRecordTab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/fs_12</item>
    </style>

    <style name="TextAppearance.MarketTab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/fs_14</item>
    </style>

    <style name="BaseButton" parent="ButtonStyle">
        <item name="android:layout_width">@dimen/dp_238</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textSize">@dimen/fs_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BaseButtonDeputy" parent="BaseButton">
        <item name="android:background">@drawable/selector_btn_bg_deputy</item>
    </style>

    <style name="BaseButtonPrimary" parent="BaseButton">
        <item name="android:background">@drawable/selector_btn_bg_primary</item>
    </style>

    <style name="BaseSwitchButton">
        <item name="BackDrawable">@drawable/selector_bg_switch</item>
        <item name="ThumbDrawable">@drawable/shape_bg_switch_thumb</item>
        <item name="ThumbMarginBottom">1dp</item>
        <item name="ThumbMarginLeft">1dp</item>
        <item name="ThumbMarginRight">1dp</item>
        <item name="ThumbMarginTop">1dp</item>
    </style>

    <style name="MenuItemView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="android:paddingStart">@dimen/dp_14</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:background">@drawable/bg_menu_item</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="mivStartTitleTextSize">@dimen/fs_16</item>
        <item name="mivStartTitleTextColor">?android:attr/textColorPrimary</item>
        <item name="mivStartDescTextSize">@dimen/fs_12</item>
        <item name="mivStartDescTextColor">?android:attr/textColorTertiary</item>
        <item name="mivEndDescTextSize">@dimen/fs_16</item>
        <item name="mivEndDescTextColor">?android:attr/textColorHighlight</item>
        <item name="mivEndArrow">?attr/iconForward</item>
        <item name="mivDividingLineColor">?attr/colorDivider</item>
    </style>

    <style name="MenuItemView.About">
        <item name="mivShowEndArrow">false</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/fs_16</item>
        <item name="android:background">@drawable/selector_edit_bg_line</item>
        <item name="android:layout_height">@dimen/dp_51</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_23</item>
    </style>

    <style name="EditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditText.Code">
        <item name="android:inputType">number</item>
        <item name="android:digits">
            "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        </item>
    </style>

</resources>
