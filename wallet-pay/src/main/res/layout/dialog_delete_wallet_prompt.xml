<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_biometric">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_38"
            android:src="@drawable/ic_delete_wallet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_14"
            android:fontFamily="@string/font_family_title"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.25"
            android:text="@string/desc_delete_wallet"
            android:textSize="@dimen/fs_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivIcon" />

        <Button
            android:id="@+id/btnPositive"
            style="@style/BaseButtonPrimary"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_34"
            android:text="@string/action_confirm_nbsp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDesc" />

        <TextView
            android:id="@+id/tvNegative"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_16"
            android:fontFamily="@string/font_family_title"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/action_cancel_nbsp"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/fs_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPositive" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>