<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/dp_15">

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/market_swap_state_succeeded"
        tools:textColor="?attr/textColorSuccess" />

    <TextView
        android:id="@+id/tvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:background="@drawable/sel_bg_market_btn_primary"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_1"
        android:text="@string/action_retry"
        android:textColor="@color/sel_color_market_btn_primary"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvState"
        app:layout_constraintStart_toEndOf="@id/tvState"
        app:layout_constraintTop_toTopOf="@id/tvState"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01.18 15:42" />

    <TextView
        android:id="@+id/tvFromToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvState"
        tools:text="999ETH" />

    <View
        android:id="@+id/vSwapIcon"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_9"
        android:layout_marginStart="@dimen/dp_33"
        android:background="?attr/marketSwapRecordIcon"
        app:layout_constraintBottom_toBottomOf="@id/tvFromToken"
        app:layout_constraintStart_toEndOf="@id/tvFromToken"
        app:layout_constraintTop_toTopOf="@id/tvFromToken" />

    <TextView
        android:id="@+id/tvToToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_37"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@id/tvFromToken"
        app:layout_constraintStart_toEndOf="@id/vSwapIcon"
        tools:text="99900VLS" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0.86"
        android:layout_marginTop="@dimen/dp_11"
        android:background="?attr/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFromToken" />

</androidx.constraintlayout.widget.ConstraintLayout>