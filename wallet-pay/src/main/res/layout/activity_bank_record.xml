<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bank.order.deposit.BankDepositOrderActivity">

    <RelativeLayout
        android:id="@+id/rlCoinFilterWrapper"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/rlStateFilterWrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llCoinFilter"
            android:layout_width="@dimen/dp_132"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:id="@+id/tvCoinFilterText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_12"
                android:includeFontPadding="false"
                android:text="@string/all_currencies"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/ivCoinFilterArrow"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:src="?attr/iconTriangleArrow" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlStateFilterWrapper"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rlCoinFilterWrapper"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llStateFilter"
            android:layout_width="@dimen/dp_132"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:id="@+id/tvStateFilterText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_12"
                android:includeFontPadding="false"
                android:text="@string/all_state"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/ivStateFilterArrow"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:src="?attr/iconTriangleArrow" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vDivider"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_5"
        android:background="?attr/colorSurfaceSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlCoinFilterWrapper" />

    <com.palliums.widget.refresh.DefaultRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vDivider">

        <com.palliums.widget.refresh.RefreshClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_bank_curr_deposit" />

            <com.palliums.widget.status.DefaultStatusLayout
                android:id="@+id/statusLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </com.palliums.widget.refresh.DefaultRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>