<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="@dimen/dp_29"
    android:paddingEnd="@dimen/dp_27">

    <ImageView
        android:id="@+id/ivType"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAddress"
        tools:src="?attr/iconRecordTypeInput" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:textSize="@dimen/fs_14"
        app:layout_constraintStart_toEndOf="@id/ivType"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="dhhoiweiâ€¦djoiejodjo" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="@dimen/fs_10"
        app:layout_constraintStart_toStartOf="@id/tvAddress"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        tools:text="01/18  12:06:23" />

    <com.palliums.widget.EnhancedTextView
        android:id="@+id/tvAmount"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:gravity="end"
        android:textSize="@dimen/fs_14"
        app:etvUseRoboto="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvAddress"
        app:layout_constraintTop_toTopOf="@id/tvAddress"
        tools:text="99900"
        tools:textColor="?attr/textColorProcessing" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_10"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTime"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/state_trading"
        tools:textColor="?attr/textColorProcessing"
        tools:visibility="visible" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="@dimen/dp_0"
        android:layout_height="?attr/dividerThickness"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_2"
        android:background="?attr/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime" />

</androidx.constraintlayout.widget.ConstraintLayout>