<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.market.MyPoolActivity">

    <LinearLayout
        android:id="@+id/llTopViewGroup"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_market_my_pool_top"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pool_liquidity_token"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="@dimen/fs_12" />

        <com.palliums.widget.EnhancedTextView
            android:id="@+id/tvLiquidityTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:hint="@string/value_null"
            android:textSize="@dimen/fs_24"
            android:textStyle="bold"
            app:etvUseRoboto="true"
            tools:text="1000" />

    </LinearLayout>

    <Button
        android:id="@+id/btnTransferIn"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_28"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@drawable/sel_bg_market_my_pool_btn"
        android:text="@string/action_transfer_in_nbsp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/fs_14"
        app:layout_constraintEnd_toStartOf="@id/btnTransferOut"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llTopViewGroup" />

    <Button
        android:id="@+id/btnTransferOut"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_28"
        android:layout_marginEnd="@dimen/dp_45"
        android:background="@drawable/sel_bg_market_my_pool_btn"
        android:text="@string/action_transfer_out_nbsp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/fs_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnTransferIn"
        app:layout_constraintTop_toTopOf="@id/btnTransferIn" />

    <View
        android:id="@+id/vLine"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_1"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/tvLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvLabel" />

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_35"
        android:text="@string/label_assets"
        android:textSize="@dimen/fs_14"
        app:layout_constraintStart_toStartOf="@id/vLine"
        app:layout_constraintTop_toBottomOf="@id/btnTransferIn" />

    <com.palliums.widget.refresh.DefaultRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabel">

        <com.palliums.widget.refresh.RefreshClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_add_wallet" />

            <com.palliums.widget.status.DefaultStatusLayout
                android:id="@+id/statusLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </com.palliums.widget.refresh.DefaultRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>