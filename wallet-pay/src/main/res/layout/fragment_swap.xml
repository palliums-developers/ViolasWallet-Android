<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHandlingFeeRate"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="end"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/handling_fee_rate_format" />

    <EditText
        android:id="@+id/etFromInputBox"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/sel_bg_market_edit_box"
        android:inputType="numberDecimal"
        android:paddingStart="@dimen/dp_11"
        android:paddingTop="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_85"
        android:paddingBottom="@dimen/dp_12"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHandlingFeeRate"
        tools:hint="0.00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/input"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/etFromInputBox"
        app:layout_constraintTop_toTopOf="@id/etFromInputBox" />

    <TextView
        android:id="@+id/tvFromBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_11"
        android:drawableStart="?attr/marketTokenAmountIcon"
        android:drawablePadding="@dimen/dp_2"
        android:text="@string/market_token_balance_format"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/etFromInputBox"
        app:layout_constraintTop_toTopOf="@id/etFromInputBox" />

    <LinearLayout
        android:id="@+id/llFromSelectGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@drawable/sel_bg_market_btn_primary"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/etFromInputBox"
        app:layout_constraintEnd_toEndOf="@id/etFromInputBox">

        <TextView
            android:id="@+id/tvFromSelectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_token"
            android:textColor="@color/sel_color_market_btn_primary"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_6"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:background="?attr/iconArrow"
            android:backgroundTint="?attr/colorPrimary" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivConversion"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_7"
        android:background="?attr/marketCoinConversionIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFromInputBox" />

    <EditText
        android:id="@+id/etToInputBox"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/sel_bg_market_edit_box"
        android:inputType="numberDecimal"
        android:paddingStart="@dimen/dp_11"
        android:paddingTop="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_85"
        android:paddingBottom="@dimen/dp_12"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivConversion"
        tools:hint="0.00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/output"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/etToInputBox"
        app:layout_constraintTop_toTopOf="@id/etToInputBox" />

    <TextView
        android:id="@+id/tvToBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_11"
        android:drawableStart="?attr/marketTokenAmountIcon"
        android:drawablePadding="@dimen/dp_2"
        android:text="@string/market_token_balance_format"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/etToInputBox"
        app:layout_constraintTop_toTopOf="@id/etToInputBox" />

    <LinearLayout
        android:id="@+id/llToSelectGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@drawable/sel_bg_market_btn_primary"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/etToInputBox"
        app:layout_constraintEnd_toEndOf="@id/etToInputBox">

        <TextView
            android:id="@+id/tvToSelectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_token"
            android:textColor="@color/sel_color_market_btn_primary"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_6"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:background="?attr/iconArrow"
            android:backgroundTint="?attr/colorPrimary" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvExchangeRate"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etToInputBox"
        tools:text="@string/exchange_rate_format" />

    <TextView
        android:id="@+id/tvGasFee"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExchangeRate"
        tools:text="@string/gas_fee_format" />

    <Button
        android:id="@+id/btnSwap"
        style="@style/BaseButtonPrimary"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/action_swap_nbsp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGasFee" />

    <TextView
        android:id="@+id/tvSwapRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_47"
        android:text="@string/title_market_swap_records"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSwap" />

    <View
        android:id="@+id/vTabIndicator"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/shape_market_record_tab_indicator"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tvSwapRecords"
        app:layout_constraintTop_toBottomOf="@id/tvSwapRecords" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFailureTip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_44"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_biometric"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3">

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_23"
                android:gravity="center_horizontal"
                android:text="@string/common_load_fail"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRetryBtn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_23"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/action_retry"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDesc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutLoad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_44"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#8c000000"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateDrawable="@drawable/shape_progress_bar_loading"
                    android:maxHeight="60dp"
                    android:minHeight="25dp"
                    android:paddingStart="50dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="50dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvProgressContent"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progress"
                    tools:text="@string/common_dialog_loading" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>