<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tokenDetails.TokenDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/dp_0">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTokenInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_marginBottom="@dimen/dp_22"
                android:background="?attr/tokenDetailsTokenInfoBg"
                android:paddingHorizontal="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTokenLogo"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="?attr/iconCoinDefLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTokenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_17"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textSize="@dimen/fs_12"
                    app:layout_constraintStart_toEndOf="@id/ivTokenLogo"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="vtoken" />

                <NumberTextView
                    android:id="@+id/tvTokenAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textSize="@dimen/fs_18"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivTokenLogo"
                    tools:text="102333.99" />

                <NumberTextView
                    android:id="@+id/tvFiatAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textSize="@dimen/fs_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTokenAmount"
                    tools:text="â‰ˆ$0.00" />

                <TextView
                    android:id="@+id/tvTokenAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:drawableEnd="?attr/iconCopy"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_10"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/fs_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFiatAmount"
                    tools:text="dhhoiweidjoiejodjoiejodjo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorSurface"
                app:contentInsetEndWithActions="@dimen/dp_0"
                app:contentInsetStartWithNavigation="@dimen/dp_0"
                app:layout_collapseMode="pin"
                app:navigationIcon="?attr/iconBackPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/fs_16"
                    android:textStyle="bold"
                    tools:text="vtoken" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_42"
            android:layout_marginHorizontal="@dimen/dp_14"
            app:tabBackground="@null"
            app:tabIndicatorHeight="@dimen/dp_0"
            app:tabMaxWidth="@dimen/dp_200"
            app:tabMinWidth="@dimen/dp_30"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/dp_15"
            app:tabPaddingStart="@dimen/dp_15"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="?attr/colorPrimary"
            app:tabTextAppearance="@style/TextAppearance.TransactionRecordTab"
            app:tabTextColor="?attr/tokenDetailsTabNormalTextColor" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

    <LinearLayout
        android:id="@+id/llBottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="@dimen/dp_29"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:layout_behavior="com.palliums.behavior.FooterBehavior">

        <Button
            android:id="@+id/btnTransfer"
            style="@style/BaseButton"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_token_info_transfer"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/action_transfer_nbsp"
            android:textSize="@dimen/fs_14" />

        <View
            android:layout_width="@dimen/dp_13"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnCollection"
            style="@style/BaseButton"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_token_info_collection"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/action_collection_nbsp"
            android:textSize="@dimen/fs_14" />

        <View
            android:layout_width="@dimen/dp_13"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_bg_primary"
            android:padding="@dimen/dp_1"
            android:visibility="visible">

            <Button
                android:id="@+id/flExchange"
                style="@style/BaseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_token_info_exchange"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/action_exchange_nbsp"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/fs_14" />

        </FrameLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>