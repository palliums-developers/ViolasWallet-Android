<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_style_1_solid_corners_4_normal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_23"
            android:includeFontPadding="false"
            android:text="@string/extraction"
            android:textSize="@dimen/fs_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_13"
            android:padding="@dimen/dp_10"
            android:src="?attr/iconCloseSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.palliums.widget.EnhancedEditView
            android:id="@+id/etInputBox"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/sel_bg_edit_box_corners_3"
            android:gravity="center_vertical"
            android:hint="@string/bank_withdrawal_hint_no_input"
            android:includeFontPadding="false"
            android:inputType="numberDecimal"
            android:paddingHorizontal="@dimen/dp_8"
            android:textSize="@dimen/fs_16"
            app:eevUseRoboto="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_7"
            android:includeFontPadding="false"
            android:textSize="@dimen/fs_16"
            app:layout_constraintBottom_toBottomOf="@id/etInputBox"
            app:layout_constraintEnd_toEndOf="@id/etInputBox"
            app:layout_constraintTop_toTopOf="@id/etInputBox"
            tools:text="VLS" />

        <ImageView
            android:id="@+id/ivAmountIcon"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:background="?attr/iconAmount"
            app:layout_constraintStart_toStartOf="@id/etInputBox"
            app:layout_constraintTop_toBottomOf="@id/etInputBox" />

        <TextView
            android:id="@+id/tvAmountDesc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_4"
            android:includeFontPadding="false"
            android:text="@string/bank_withdrawal_label_extractable_amount"
            android:textSize="@dimen/fs_12"
            app:layout_constraintBottom_toBottomOf="@id/ivAmountIcon"
            app:layout_constraintStart_toEndOf="@id/ivAmountIcon"
            app:layout_constraintTop_toTopOf="@id/ivAmountIcon" />

        <com.palliums.widget.EnhancedTextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_5"
            android:includeFontPadding="false"
            android:textSize="@dimen/fs_12"
            android:textStyle="bold"
            app:etvUseRoboto="true"
            app:layout_constraintBottom_toBottomOf="@id/ivAmountIcon"
            app:layout_constraintStart_toEndOf="@id/tvAmountDesc"
            app:layout_constraintTop_toTopOf="@id/ivAmountIcon"
            tools:text="20 VLS" />

        <TextView
            android:id="@+id/tvAll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_20"
            android:includeFontPadding="false"
            android:padding="@dimen/dp_10"
            android:text="@string/all"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etInputBox" />

        <LinearLayout
            android:id="@+id/llDescGroup"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/bg_style_1_color_surfaces_radius_3"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dp_8"
            android:paddingStart="@dimen/dp_9"
            android:paddingEnd="@dimen/dp_7"
            app:layout_constraintEnd_toEndOf="@id/etInputBox"
            app:layout_constraintStart_toStartOf="@id/etInputBox"
            app:layout_constraintTop_toBottomOf="@id/ivAmountIcon">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:background="?attr/iconInfo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:includeFontPadding="false"
                android:lineHeight="@dimen/dp_18"
                android:text="@string/bank_withdrawal_desc"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/fs_10" />

        </LinearLayout>

        <Button
            android:id="@+id/btnExtraction"
            style="@style/BaseButtonPrimary"
            android:layout_marginVertical="@dimen/dp_46"
            android:text="@string/extraction_nbsp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llDescGroup" />

        <TextView
            android:id="@+id/tvTips"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:textColor="?attr/colorError"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toEndOf="@id/etInputBox"
            app:layout_constraintStart_toStartOf="@id/etInputBox"
            app:layout_constraintTop_toBottomOf="@id/btnExtraction"
            tools:text="@string/bank_withdrawal_hint_no_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>