<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/dp_0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:elevation="@dimen/dp_0">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/def_text_font_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="vtoken" />

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTokenInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginVertical="@dimen/dp_5"
                android:background="@drawable/bg_token_info_head"
                android:paddingEnd="@dimen/dp_14">

                <com.palliums.widget.NiceImageView
                    android:id="@+id/ivTokenLogo"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="@color/gray"
                    app:is_circle="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTokenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toEndOf="@id/ivTokenLogo"
                    app:layout_constraintTop_toTopOf="@id/ivTokenLogo"
                    tools:text="vtoken" />

                <TextView
                    android:id="@+id/tvTokenAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivTokenLogo"
                    tools:text="102333.99" />

                <TextView
                    android:id="@+id/tvFiatAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTokenAmount"
                    tools:text="â‰ˆ$0.00" />

                <TextView
                    android:id="@+id/tvTokenAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:drawableEnd="@drawable/ic_token_info_copy"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/color_5C5C5C"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFiatAmount"
                    tools:text="dhhoiweidjoiejodjoiejodjo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:paddingHorizontal="@dimen/dp_15"
            app:tabIndicatorHeight="@dimen/dp_0"
            app:tabMaxWidth="@dimen/dp_53"
            app:tabMinWidth="@dimen/dp_53"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/color_7038FD"
            app:tabTextAppearance="@style/TabTextAppearance_TokenInfo"
            app:tabTextColor="@color/color_C2C2C2" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

    <LinearLayout
        android:id="@+id/llBottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_29"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

        <Button
            android:id="@+id/btnTransfer"
            style="@style/BaseButton"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_token_info_transfer"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/action_transfer_nbsp"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_13"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnCollection"
            style="@style/BaseButton"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_token_info_collection"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/action_collection_nbsp"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_13"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/flExchange"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_bg_primary"
            android:padding="@dimen/dp_1"
            android:visibility="visible">

            <Button
                style="@style/BaseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_token_info_exchange"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/action_exchange_nbsp"
                android:textColor="@color/color_7038FD"
                android:textSize="@dimen/sp_14" />

        </FrameLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>