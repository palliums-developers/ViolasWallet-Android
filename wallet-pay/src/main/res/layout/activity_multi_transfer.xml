<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transfer.LibraTransferActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_22"
        android:background="?attr/transferInfoBg"
        android:padding="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHintCoinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fs_14"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="BTC" />

        <com.palliums.widget.NumberTextView
            android:id="@+id/tvCoinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_22"
            android:textSize="@dimen/fs_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvHintCoinName"
            tools:text="@string/transfer_label_balance_format" />

        <com.palliums.widget.NumberEditText
            android:id="@+id/editAmountInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="7dp"
            android:background="@drawable/selector_edit_bg_box"
            android:gravity="center_vertical"
            android:hint="@string/transfer_hint_transfer_amount"
            android:inputType="numberDecimal"
            android:paddingHorizontal="@dimen/dp_14"
            android:textSize="@dimen/fs_14"
            app:layout_constraintTop_toBottomOf="@id/tvHintCoinName" />

        <LinearLayout
            android:id="@+id/llToSelectGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:background="@drawable/sel_bg_btn2_primary"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@id/editAmountInput"
            app:layout_constraintEnd_toEndOf="@id/editAmountInput">

            <TextView
                android:id="@+id/tvToSelectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_action_select_token"
                android:textColor="@color/sel_text_color_btn2"
                android:textSize="@dimen/fs_12" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_2"
                android:background="@drawable/sel_market_downward" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCollectionAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/transfer_label_receiver_address"
            android:textSize="@dimen/fs_14"
            app:layout_constraintStart_toStartOf="@id/tvHintCoinName"
            app:layout_constraintTop_toBottomOf="@id/editAmountInput" />

        <ImageView
            android:id="@+id/ivAddressBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_address_book"
            app:layout_constraintBottom_toBottomOf="@+id/tvCollectionAddress"
            app:layout_constraintEnd_toEndOf="@+id/ivScan"
            app:layout_constraintStart_toStartOf="@+id/ivScan"
            app:layout_constraintTop_toTopOf="@+id/tvCollectionAddress" />

        <EditText
            android:id="@+id/editAddressInput"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/selector_edit_bg_box"
            android:hint="@string/transfer_hint_receiver_address"
            android:maxLength="100"
            android:minHeight="48dp"
            android:paddingVertical="@dimen/dp_7"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_38"
            android:textSize="@dimen/fs_14"
            app:layout_constraintEnd_toEndOf="@id/editAmountInput"
            app:layout_constraintStart_toStartOf="@id/editAmountInput"
            app:layout_constraintTop_toBottomOf="@id/tvCollectionAddress" />

        <ImageView
            android:id="@+id/ivScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="4dp"
            android:src="?attr/iconScanPrimary"
            app:layout_constraintBottom_toBottomOf="@id/editAddressInput"
            app:layout_constraintEnd_toEndOf="@id/editAddressInput"
            app:layout_constraintTop_toTopOf="@id/editAddressInput" />

        <TextView
            android:id="@+id/tvHintFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/transfer_label_fees"
            android:textSize="@dimen/fs_14"
            app:layout_constraintStart_toStartOf="@id/tvHintCoinName"
            app:layout_constraintTop_toBottomOf="@id/editAddressInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer_desc_slow"
            android:textSize="@dimen/fs_12"
            app:layout_constraintBottom_toTopOf="@id/sbQuota"
            app:layout_constraintStart_toStartOf="@id/tvHintCoinName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer_desc_fast"
            android:textSize="@dimen/fs_12"
            app:layout_constraintBottom_toTopOf="@id/sbQuota"
            app:layout_constraintEnd_toEndOf="@id/tvCoinAmount" />

        <SeekBar
            android:id="@+id/sbQuota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_34"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:max="100"
            android:maxHeight="5dp"
            android:progress="35"
            android:progressDrawable="@drawable/progress_bar_transfer"
            android:splitTrack="false"
            android:thumb="?attr/transferSeekBarThumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHintFee" />

        <com.palliums.widget.NumberTextView
            android:id="@+id/tvFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fs_10"
            app:layout_constraintStart_toStartOf="@id/tvHintCoinName"
            app:layout_constraintTop_toBottomOf="@id/sbQuota" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/BaseButtonPrimary"
            android:layout_marginTop="@dimen/dp_74"
            android:layout_marginBottom="@dimen/dp_50"
            android:text="@string/transfer_action_transfer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sbQuota" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>