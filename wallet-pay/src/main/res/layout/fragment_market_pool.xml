<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMiningGroup"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_13"
        android:background="?attr/homeMarketMiningBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvMiningTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_19"
            android:layout_marginStart="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center_vertical"
            android:text="@string/home_market_mining_title"
            android:textColor="?attr/textColorProcessing"
            android:textSize="@dimen/fs_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_22"
            android:background="?attr/homeMarketMiningArrowIcon"
            app:layout_constraintBottom_toBottomOf="@id/tvMiningTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvMiningTitle" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/home_market_mining_desc"
            android:textSize="@dimen/fs_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvMiningTitle"
            app:layout_constraintTop_toBottomOf="@id/tvMiningTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llSwitchOpModeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@drawable/sel_bg_btn2_secondary"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clMiningGroup">

        <TextView
            android:id="@+id/tvSwitchOpModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer_in"
            android:textColor="@color/sel_text_color_btn2"
            android:textSize="@dimen/fs_12" />

        <ImageView
            android:id="@+id/ivSwitchOpModeArrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_6"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:background="@drawable/sel_market_downward" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvEarningsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_41"
        android:drawableStart="?attr/marketPoolEarningsIcon"
        android:drawablePadding="@dimen/dp_4"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/market_pool_earnings_desc"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/fs_12"
        app:layout_constraintBottom_toBottomOf="@id/llSwitchOpModeGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/llSwitchOpModeGroup" />

    <com.palliums.widget.NumberEditText
        android:id="@+id/etInputBoxA"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/sel_bg_market_edit_box"
        android:inputType="numberDecimal"
        android:paddingStart="@dimen/dp_11"
        android:paddingTop="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_85"
        android:paddingBottom="@dimen/dp_12"
        android:textSize="@dimen/fs_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llSwitchOpModeGroup"
        tools:hint="0.00" />

    <TextView
        android:id="@+id/tvInputLabelA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/transfer_in"
        android:textSize="@dimen/fs_12"
        app:layout_constraintStart_toStartOf="@id/etInputBoxA"
        app:layout_constraintTop_toTopOf="@id/etInputBoxA" />

    <com.palliums.widget.NumberTextView
        android:id="@+id/tvBalanceA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_11"
        android:drawableStart="?attr/marketTokenAmountIcon"
        android:drawablePadding="@dimen/dp_2"
        android:text="@string/market_token_balance_format"
        android:textSize="@dimen/fs_12"
        app:layout_constraintEnd_toEndOf="@id/etInputBoxA"
        app:layout_constraintTop_toTopOf="@id/etInputBoxA" />

    <LinearLayout
        android:id="@+id/llSelectGroupA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@drawable/sel_bg_btn2_primary"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/etInputBoxA"
        app:layout_constraintEnd_toEndOf="@id/etInputBoxA">

        <TextView
            android:id="@+id/tvSelectTextA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_token"
            android:textColor="@color/sel_text_color_btn2"
            android:textSize="@dimen/fs_12" />

        <ImageView
            android:id="@+id/ivSelectArrowA"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_6"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:background="@drawable/sel_market_downward" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivModeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etInputBoxA"
        tools:src="?attr/marketPoolAndIcon" />

    <com.palliums.widget.NumberEditText
        android:id="@+id/etInputBoxB"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/sel_bg_market_edit_box"
        android:inputType="numberDecimal"
        android:paddingStart="@dimen/dp_11"
        android:paddingTop="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_85"
        android:paddingBottom="@dimen/dp_12"
        android:textSize="@dimen/fs_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivModeIcon"
        tools:hint="0.00" />

    <TextView
        android:id="@+id/tvInputLabelB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/transfer_in"
        android:textSize="@dimen/fs_12"
        app:layout_constraintStart_toStartOf="@id/etInputBoxB"
        app:layout_constraintTop_toTopOf="@id/etInputBoxB" />

    <com.palliums.widget.NumberTextView
        android:id="@+id/tvBalanceB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_11"
        android:drawableStart="?attr/marketTokenAmountIcon"
        android:drawablePadding="@dimen/dp_2"
        android:text="@string/market_token_balance_format"
        android:textSize="@dimen/fs_12"
        app:layout_constraintEnd_toEndOf="@id/etInputBoxB"
        app:layout_constraintTop_toTopOf="@id/etInputBoxB" />

    <LinearLayout
        android:id="@+id/llSelectGroupB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@drawable/sel_bg_btn2_primary"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/etInputBoxB"
        app:layout_constraintEnd_toEndOf="@id/etInputBoxB">

        <TextView
            android:id="@+id/tvSelectTextB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_token"
            android:textColor="@color/sel_text_color_btn2"
            android:textSize="@dimen/fs_12" />

        <ImageView
            android:id="@+id/ivSelectArrowB"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_6"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:background="@drawable/sel_market_downward" />

    </LinearLayout>

    <com.palliums.widget.NumberTextView
        android:id="@+id/tvExchangeRate"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/fs_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etInputBoxB"
        tools:text="@string/exchange_rate_format" />

    <TextView
        android:id="@+id/tvPoolTokenAndPoolShare"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/fs_10"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExchangeRate"
        app:layout_goneMarginTop="@dimen/dp_10"
        tools:text="@string/market_my_pool_amount_format" />

    <Button
        android:id="@+id/btnPositive"
        style="@style/BaseButtonPrimary"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/action_transfer_in_nbsp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPoolTokenAndPoolShare"
        app:layout_goneMarginTop="@dimen/dp_40" />

</androidx.constraintlayout.widget.ConstraintLayout>