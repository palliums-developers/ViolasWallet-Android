<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.identity.importIdentity.ImportIdentityActivity">

    <com.violas.wallet.widget.PasswordEditText
        android:id="@+id/editPassword"
        style="@style/PasswordRules"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/selector_edit_bg_line"
        android:gravity="center_vertical"
        android:hint="@string/hint_wallet_password"
        android:inputType="textPassword"
        android:textSize="@dimen/fs_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintTop_toTopOf="parent" />

    <com.violas.wallet.widget.PasswordEditText
        android:id="@+id/editConfirmPassword"
        style="@style/PasswordRules"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/selector_edit_bg_line"
        android:hint="@string/hint_input_confirm_password"
        android:inputType="textPassword"
        android:textSize="@dimen/fs_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword" />

    <Button
        android:id="@+id/btnConfirm"
        style="@style/BaseButtonPrimary"
        android:layout_marginTop="@dimen/dp_57"
        android:text="@string/action_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editConfirmPassword" />

    <CheckBox
        android:id="@+id/btnHasAgreePrivacyPolicy"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/dp_20"
        android:button="@null"
        android:checked="false"
        android:drawableEnd="@drawable/selector_wallet_common_checkbox"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toStartOf="@+id/tvPrivacyPolicy"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirm" />

    <TextView
        android:maxWidth="300dp"
        android:id="@+id/tvPrivacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="?android:textColorTertiary"
        app:layout_constraintBottom_toBottomOf="@+id/btnHasAgreePrivacyPolicy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHasAgreePrivacyPolicy"
        app:layout_constraintTop_toTopOf="@+id/btnHasAgreePrivacyPolicy" />
</androidx.constraintlayout.widget.ConstraintLayout>