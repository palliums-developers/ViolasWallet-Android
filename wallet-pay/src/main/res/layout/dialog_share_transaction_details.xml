<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transactionDetails.ShareTransactionDetailsDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTransactionInfo"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_39"
        android:background="?attr/transDetailsTransInfoBg"
        android:paddingHorizontal="@dimen/dp_24"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginTop="@dimen/dp_78">

        <ImageView
            android:id="@+id/ivState"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="?attr/iconRecordStateProcessing" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:fontFamily="@string/font_family_title"
            android:textSize="@dimen/fs_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivState"
            tools:text="@string/txn_details_state_processing"
            tools:textColor="?attr/textColorProcessing" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDesc"
            tools:text="2018-11-06  16:30:44" />

        <com.palliums.widget.NumberTextView
            android:id="@+id/tvAmount"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_94"
            android:layout_marginTop="@dimen/dp_69"
            android:paddingVertical="@dimen/dp_5"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/fs_12"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            tools:text="123 BTC" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/txn_details_label_1"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toStartOf="@id/tvAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAmount" />

        <com.palliums.widget.NumberTextView
            android:id="@+id/tvGas"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAmount"
            app:layout_constraintTop_toBottomOf="@id/tvAmount"
            tools:text="0.0012 BTC" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/txn_details_label_2"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toStartOf="@id/tvGas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvGas" />

        <LinearLayout
            android:id="@+id/llReceiptAddress"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAmount"
            app:layout_constraintTop_toBottomOf="@id/tvGas">

            <TextView
                android:id="@+id/tvReceiptAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="?attr/iconCopy"
                android:drawablePadding="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/fs_12"
                tools:text="dioewdji3ie9wOid30wdue" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/txn_details_label_3"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toStartOf="@id/llReceiptAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/llReceiptAddress" />

        <LinearLayout
            android:id="@+id/llPaymentAddress"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAmount"
            app:layout_constraintTop_toBottomOf="@id/llReceiptAddress">

            <TextView
                android:id="@+id/tvPaymentAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="?attr/iconCopy"
                android:drawablePadding="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/fs_12"
                tools:text="dioewdji3ie9wOid30wdueji3ie9wOid9wOid" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/txn_details_label_4"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toStartOf="@id/llPaymentAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/llPaymentAddress" />

        <LinearLayout
            android:id="@+id/llTransactionNumber"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAmount"
            app:layout_constraintTop_toBottomOf="@id/llPaymentAddress">

            <TextView
                android:id="@+id/tvTransactionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="?attr/iconCopy"
                android:drawablePadding="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_5"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/fs_12"
                tools:text="122322" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/txn_details_label_5"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/fs_12"
            app:layout_constraintEnd_toStartOf="@id/llTransactionNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/llTransactionNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShareTypes"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceSecondary"
        android:paddingHorizontal="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@id/tvCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/item_share_transaction_details" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_39"
        android:background="?attr/colorSurface"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/common_action_cancel_space"
        android:textColor="?android:textColorTertiary"
        android:textSize="@dimen/fs_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>