<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_35"
        android:paddingVertical="@dimen/dp_22">

        <TextView
            android:id="@+id/tvFromToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="30 VLS" />

        <ImageView
            android:id="@+id/ivSwapIcon"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:background="?attr/marketSwapDetailsIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFromToken" />

        <TextView
            android:id="@+id/tvToToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSwapIcon"
            tools:text="2333 ETH" />

        <View
            android:id="@+id/vHorizontalDivider"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_26"
            android:background="?attr/colorDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvToToken" />

        <TextView
            android:id="@+id/tvExchangeRate"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_94"
            android:layout_marginTop="@dimen/dp_31"
            android:paddingVertical="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vHorizontalDivider"
            tools:text="1:100" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/label_transaction_details_exchange_rate"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/tvExchangeRate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvExchangeRate" />

        <TextView
            android:id="@+id/tvHandlingFee"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvExchangeRate"
            app:layout_constraintTop_toBottomOf="@id/tvExchangeRate"
            tools:text="0.0012 VLS" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/label_transaction_details_handling_fee"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/tvHandlingFee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvHandlingFee" />

        <TextView
            android:id="@+id/tvGasFee"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvHandlingFee"
            app:layout_constraintTop_toBottomOf="@id/tvHandlingFee"
            tools:text="0.0012 VLS" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/label_transaction_details_gas"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/tvGasFee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvGasFee" />

        <TextView
            android:id="@+id/tvOrderTime"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvExchangeRate"
            app:layout_constraintTop_toBottomOf="@id/tvGasFee"
            tools:text="2018-11-06 16:30:44" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/label_transaction_details_order_time"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/tvOrderTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvOrderTime" />

        <TextView
            android:id="@+id/tvDealTime"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvExchangeRate"
            app:layout_constraintTop_toBottomOf="@id/tvOrderTime"
            tools:text="@string/value_null" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/label_transaction_details_deal_time"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/tvDealTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDealTime" />

        <ImageView
            android:id="@+id/ivStartIcon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_34"
            android:background="?attr/iconRecordStateSucceeded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDealTime" />

        <TextView
            android:id="@+id/tvStartDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/market_transaction_state_submitted"
            android:textColor="?attr/marketDetailsCompletedStateTextColor"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/ivStartIcon"
            app:layout_constraintStart_toEndOf="@id/ivStartIcon"
            app:layout_constraintTop_toTopOf="@id/ivStartIcon" />

        <View
            android:id="@+id/vVerticalLine1"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_4"
            android:background="?attr/marketDetailsCompletedLineBgColor"
            app:layout_constraintEnd_toEndOf="@id/ivStartIcon"
            app:layout_constraintStart_toStartOf="@id/ivStartIcon"
            app:layout_constraintTop_toBottomOf="@id/ivStartIcon" />

        <ImageView
            android:id="@+id/ivProcessingIcon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:background="?attr/iconRecordStateProcessing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vVerticalLine1" />

        <TextView
            android:id="@+id/tvProcessingDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/market_swap_state_processing"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/ivProcessingIcon"
            app:layout_constraintStart_toEndOf="@id/ivProcessingIcon"
            app:layout_constraintTop_toTopOf="@id/ivProcessingIcon"
            tools:textColor="?attr/marketDetailsCompletedStateTextColor" />

        <View
            android:id="@+id/vVerticalLine2"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/ivStartIcon"
            app:layout_constraintStart_toStartOf="@id/ivProcessingIcon"
            app:layout_constraintTop_toBottomOf="@id/ivProcessingIcon"
            tools:background="?attr/marketDetailsCompletedLineBgColor"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivResultIcon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vVerticalLine2"
            tools:background="?attr/iconRecordStateFailed"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvResultDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivResultIcon"
            app:layout_constraintStart_toEndOf="@id/ivResultIcon"
            app:layout_constraintTop_toTopOf="@id/ivResultIcon"
            tools:text="@string/market_swap_state_failed"
            tools:textColor="?attr/textColorFailure"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/sel_bg_market_btn_primary"
            android:paddingHorizontal="@dimen/dp_8"
            android:paddingVertical="@dimen/dp_1"
            android:text="@string/action_retry"
            android:textColor="@color/sel_color_market_btn_primary"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivResultIcon"
            app:layout_constraintStart_toEndOf="@id/tvResultDesc"
            app:layout_constraintTop_toTopOf="@id/ivResultIcon"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>