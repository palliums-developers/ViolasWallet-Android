<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/dp_15">

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:includeFontPadding="false"
        android:textSize="@dimen/fs_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/swap_txn_state_succeeded"
        tools:textColor="?attr/textColorSuccess" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:includeFontPadding="false"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="@dimen/fs_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01.18 15:42" />

    <com.palliums.widget.NumberTextView
        android:id="@+id/tvInputCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:includeFontPadding="false"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/fs_14"
        app:layout_constraintStart_toStartOf="@id/tvState"
        app:layout_constraintTop_toBottomOf="@id/tvState"
        tools:text="999ETH" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_9"
        android:layout_marginStart="@dimen/dp_8"
        android:background="?attr/iconEndArrow"
        app:layout_constraintBottom_toBottomOf="@id/tvInputCoin"
        app:layout_constraintStart_toEndOf="@id/tvInputCoin"
        app:layout_constraintTop_toTopOf="@id/tvInputCoin" />

    <com.palliums.widget.NumberTextView
        android:id="@+id/tvOutputCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:includeFontPadding="false"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/fs_14"
        app:layout_constraintBaseline_toBaselineOf="@id/tvInputCoin"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        tools:text="99900VLS" />

    <com.palliums.widget.NumberTextView
        android:id="@+id/tvMinerFees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="@string/market_swap_label_gas_fee_format"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="@dimen/fs_10"
        app:layout_constraintStart_toStartOf="@id/tvState"
        app:layout_constraintTop_toBottomOf="@id/tvInputCoin" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="?attr/dividerThickness"
        android:layout_marginTop="@dimen/dp_12"
        android:background="?attr/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMinerFees" />

</androidx.constraintlayout.widget.ConstraintLayout>