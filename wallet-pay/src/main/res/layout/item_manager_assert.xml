<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/shape_bg_item_manager_assert">

    <View
        android:id="@+id/vLogoGroup"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_13"
        android:background="@drawable/bg_round_hollow_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCoinLogo"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        app:layout_constraintBottom_toBottomOf="@id/vLogoGroup"
        app:layout_constraintEnd_toEndOf="@id/vLogoGroup"
        app:layout_constraintStart_toStartOf="@id/vLogoGroup"
        app:layout_constraintTop_toTopOf="@id/vLogoGroup"
        tools:background="@drawable/ic_label_btc" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:height="16dp"
        android:fontFamily="@string/font_family_title"
        android:includeFontPadding="false"
        android:textSize="@dimen/fs_16"
        app:layout_constraintStart_toEndOf="@id/vLogoGroup"
        app:layout_constraintTop_toTopOf="@id/vLogoGroup"
        tools:text="123" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/dp_14"
        android:includeFontPadding="false"
        android:textSize="@dimen/fs_14"
        app:layout_constraintBottom_toBottomOf="@id/vLogoGroup"
        app:layout_constraintStart_toStartOf="@id/name"
        tools:text="asdfsdfsdf" />

    <com.smallraw.support.switchcompat.SwitchButton
        android:id="@+id/checkBox"
        style="@style/BaseSwitchButton"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/dp_7"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>