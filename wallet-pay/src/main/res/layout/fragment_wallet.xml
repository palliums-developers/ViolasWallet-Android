<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:background="?attr/homeFragmentTopBg">

                <TextView
                    android:id="@+id/tvTotalAssetsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="56dp"
                    android:text="@string/main_wallet_total_fiat_balance"
                    android:textColor="?attr/walletHomeTotalAssetsTextColor"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivTotalHidden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvTotalAssetsTitle"
                    app:layout_constraintStart_toEndOf="@+id/tvTotalAssetsTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvTotalAssetsTitle" />

                <ImageView
                    android:id="@+id/ivScan"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:layout_marginEnd="@dimen/dp_17"
                    android:foreground="?attr/actionBarItemBackground"
                    android:padding="@dimen/dp_10"
                    android:src="?attr/iconScanSecondary"
                    app:layout_constraintBottom_toBottomOf="@id/tvTotalAssetsTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvTotalAssetsTitle" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvTotalAssetsTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalAssetsTitle"
                    tools:text="120.00000000" />

                <LinearLayout
                    android:id="@+id/viewWalletConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/dp_45"
                    android:background="@drawable/shape_bg_main_wallet_connect"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:src="?attr/walletHomeWalletConnectIcon" />

                    <TextView
                        android:id="@+id/tvWalletConnectStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:textColor="?attr/walletHomeWalletConnectTextColor"
                        android:textSize="12sp"
                        tools:text="@string/wallet_connect_have_landed" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/viewAssetsGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-33dp"
                android:background="@drawable/bg_wallet_main_assets_list">

                <TextView
                    android:id="@+id/tvAssert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="34dp"
                    android:text="@string/label_assets"
                    android:textColor="?attr/walletHomeAssetsTextColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivAddAssert"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:foreground="?attr/actionBarItemBackground"
                    android:padding="@dimen/dp_10"
                    android:src="?attr/walletHomeAddAssetsIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAssert"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvAssert" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAssert"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:overScrollMode="never"
                    android:paddingStart="14dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="14dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAssert"
                    tools:itemCount="30"
                    tools:listitem="@layout/item_wallet_assert" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/viewAddAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-33dp"
                android:background="@drawable/bg_wallet_main_assets_list"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingTop="32dp"
                android:paddingEnd="14dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/viewCreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/selector_bg_wallet_main_assets_list_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:src="?attr/walletHomeCreateWalletIcon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="@string/create_account"
                        android:textColor="?attr/walletHomeInitWalletTextColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewImportAccount"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/selector_bg_wallet_main_assets_list_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:src="?attr/walletHomeImportWalletIcon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="@string/import_account"
                        android:textColor="?attr/walletHomeInitWalletTextColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        layout="@layout/view_backup_now_wallet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>