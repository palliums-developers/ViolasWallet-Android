<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="?attr/colorSurfaceSecondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/viewGroupOperation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:paddingHorizontal="@dimen/dp_14"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvBusinessName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/fs_12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/bank_deposit_label_biz_name" />

                    <LinearLayout
                        android:id="@+id/viewGroupCurrentAssets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvBusinessName">

                        <ImageView
                            android:id="@+id/ivCurrentAssetsIcon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            tools:src="@drawable/icon_bg_bank_info_assets" />

                        <TextView
                            android:id="@+id/ivCurrentAssetsName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            tools:text="VLS" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:src="@drawable/icon_bank_info_fold" />
                    </LinearLayout>

                    <com.palliums.widget.NumberEditText
                        android:id="@+id/editBusinessValue"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/selector_edit_bg_line"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/fs_16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvBusinessName"
                        tools:hint="@string/bank_biz_hint_limit_amount_format" />

                    <TextView
                        android:id="@+id/tvAllValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/common_action_all"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="@dimen/fs_10"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editBusinessValue" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvAllValue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editBusinessValue">

                        <LinearLayout
                            android:id="@+id/viewGroupBusinessUsableAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivBusinessUsableAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvBusinessUsableAmountTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="@dimen/fs_10"
                                tools:text="@string/common_label_available_balance" />

                            <com.palliums.widget.NumberTextView
                                android:id="@+id/tvBusinessUsableAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="@dimen/fs_10"
                                android:textStyle="bold"
                                tools:text="1000/1000VLS" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/viewGroupBusinessLimitAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:orientation="horizontal"
                            tools:visibility="visible">

                            <ImageView
                                android:id="@+id/ivBusinessLimitAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvBusinessLimitAmountTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="@dimen/fs_10"
                                tools:text="@string/bank_borrow_label_borrowable_colon" />

                            <com.palliums.widget.NumberTextView
                                android:id="@+id/tvBusinessLimitAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="@dimen/fs_10"
                                android:textStyle="bold"
                                tools:text="1000/1000VLS" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/viewGroupBusinessParameter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    app:divider="@drawable/shape_bank_business_parameter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:showDividers="middle">

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/viewGroupProductInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:paddingStart="14dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="18dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvProductInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_family_title"
                        android:text="@string/bank_biz_title_product_desc"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/fs_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/icon_bank_product_info"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvProductInfo"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivProductInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/icon_bank_info_expand"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.violas.wallet.widget.AutoExpandLayout
                    android:id="@+id/expandLayoutProductInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/viewGroupProductIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:paddingStart="14dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="18dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvProductIssue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_family_title"
                        android:text="@string/bank_biz_title_common_problem"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/fs_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/icon_bank_product_issue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvProductIssue"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivProductIssue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/icon_bank_info_fold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.violas.wallet.widget.AutoExpandLayout
                    android:id="@+id/expandLayoutProductIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/viewGroupOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="1dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/viewGroupAgreePolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingBottom="10dp"
                android:visibility="gone"
                tools:visibility="visible">

                <CheckBox
                    android:id="@+id/btnHasAgreePolicy"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:button="@null"
                    android:checked="false"
                    android:drawableEnd="@drawable/selector_wallet_common_checkbox"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/tvPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="?android:textColorTertiary"
                    android:textSize="@dimen/fs_12"
                    tools:text="@string/bank_borrow_action_agreement_read_and_agree" />
            </LinearLayout>

            <Button
                android:id="@+id/btnOperationAction"
                style="@style/BaseButtonPrimary" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#E54040"
                android:textSize="@dimen/fs_12"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.palliums.widget.status.DefaultStatusLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:slShowReloadOnFailed="true" />

</FrameLayout>