<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_biometric">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_53"
            android:fontFamily="@string/font_family_title"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/touch_id_open_prompt_title"
            android:textSize="@dimen/fs_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_82"
            android:layout_marginTop="@dimen/dp_38"
            android:src="@drawable/ic_fingerprint_home_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <Button
            android:id="@+id/btnPositive"
            style="@style/BaseButtonPrimary"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_45"
            android:text="@string/touch_id_open_prompt_action_setup_now"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivIcon" />

        <TextView
            android:id="@+id/tvNegative"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_18"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/touch_id_open_prompt_action_later_setup"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="@dimen/fs_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPositive" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>