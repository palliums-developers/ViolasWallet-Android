<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.walletconnect.WalletConnectManagerActivity">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="?attr/statusBarSize"
        android:layout_marginEnd="@dimen/dp_13"
        android:foreground="?attr/actionBarItemBackground"
        android:padding="@dimen/dp_16"
        android:src="?attr/iconClosePrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDeskIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_177"
        android:src="?attr/walletConnectWebIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScanLoginDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:text="@string/wallet_connect_management_title"
        android:textSize="@dimen/fs_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDeskIcon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_bg_white_button"
        android:elevation="0dp"
        android:text="@string/wallet_connect_management_action"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/fs_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvScanLoginDesc" />
</androidx.constraintlayout.widget.ConstraintLayout>