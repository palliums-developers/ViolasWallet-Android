<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceSecondary">

    <ImageView
        android:id="@+id/ivTopBg"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_238"
        android:background="?attr/homeBankTopBgIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.palliums.widget.refresh.DefaultRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/toolbar"
                android:layout_width="@dimen/dp_0"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_marginEnd="@dimen/dp_21"
                android:foreground="?attr/actionBarItemBackground"
                android:padding="@dimen/dp_15"
                android:src="?attr/iconMore"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/toolbar" />

            <TextView
                android:id="@+id/tvTotalDepositLabel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_35"
                android:includeFontPadding="false"
                android:text="@string/total_deposit_label"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/fs_10"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/toolbar" />

            <ImageView
                android:id="@+id/ivShowHideAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tvTotalDepositLabel"
                app:layout_constraintStart_toEndOf="@+id/tvTotalDepositLabel"
                app:layout_constraintTop_toTopOf="@+id/tvTotalDepositLabel"
                tools:src="?attr/iconShowPrimary" />

            <NumberTextView
                android:id="@+id/tvTotalDeposit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_24"
                android:includeFontPadding="false"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/fs_20"
                app:layout_constraintStart_toStartOf="@id/tvTotalDepositLabel"
                app:layout_constraintTop_toBottomOf="@id/tvTotalDepositLabel"
                tools:text="≈2041.76" />

            <ImageView
                android:id="@+id/ivTotalBorrowableIcon"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_28"
                android:background="?attr/homeBankTotalBorrowableIcon"
                app:layout_constraintStart_toStartOf="@id/tvTotalDepositLabel"
                app:layout_constraintTop_toBottomOf="@id/tvTotalDeposit" />

            <TextView
                android:id="@+id/tvTotalBorrowableLabel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_8"
                android:includeFontPadding="false"
                android:text="@string/total_borrowable_label"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/fs_10"
                app:layout_constraintBottom_toBottomOf="@id/ivTotalBorrowableIcon"
                app:layout_constraintStart_toEndOf="@id/ivTotalBorrowableIcon"
                app:layout_constraintTop_toTopOf="@id/ivTotalBorrowableIcon" />

            <NumberTextView
                android:id="@+id/tvBorrowable"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:includeFontPadding="false"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/fs_10"
                app:layout_constraintBottom_toBottomOf="@id/ivTotalBorrowableIcon"
                app:layout_constraintStart_toEndOf="@id/tvTotalBorrowableLabel"
                app:layout_constraintTop_toTopOf="@id/ivTotalBorrowableIcon"
                tools:text="≈1041.76/1500" />

            <ImageView
                android:id="@+id/ivTotalEarningsIcon"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_14"
                android:background="?attr/homeBankTotalEarningsIcon"
                app:layout_constraintStart_toStartOf="@id/tvTotalDepositLabel"
                app:layout_constraintTop_toBottomOf="@id/ivTotalBorrowableIcon" />

            <TextView
                android:id="@+id/tvTotalEarningsLabel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_8"
                android:includeFontPadding="false"
                android:text="@string/total_earnings_label"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/fs_10"
                app:layout_constraintBottom_toBottomOf="@id/ivTotalEarningsIcon"
                app:layout_constraintStart_toEndOf="@id/ivTotalEarningsIcon"
                app:layout_constraintTop_toTopOf="@id/ivTotalEarningsIcon" />

            <NumberTextView
                android:id="@+id/tvTotalEarnings"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:includeFontPadding="false"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/fs_10"
                app:layout_constraintBottom_toBottomOf="@id/ivTotalEarningsIcon"
                app:layout_constraintStart_toEndOf="@id/tvTotalEarningsLabel"
                app:layout_constraintTop_toTopOf="@id/ivTotalEarningsIcon"
                tools:text="≈41.76" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/bg_home_bank_yesterday_earnings"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_6"
                android:paddingVertical="@dimen/dp_3"
                app:layout_constraintBottom_toBottomOf="@id/ivTotalEarningsIcon"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="?attr/homeBankYesterdayEarningsIcon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_4"
                    android:includeFontPadding="false"
                    android:text="@string/yesterday_earnings_label"
                    android:textColor="?attr/homeBankYesterdayEarningsTextColor"
                    android:textSize="@dimen/fs_10" />

                <NumberTextView
                    android:id="@+id/tvYesterdayEarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:textColor="?attr/homeBankYesterdayEarningsTextColor"
                    android:textSize="@dimen/fs_10"
                    tools:text="0.01 $" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/bg_style_1_solid_top_corners_8_normal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivTotalEarningsIcon">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_4"
                    app:tabBackground="@null"
                    app:tabIndicatorHeight="@dimen/dp_0"
                    app:tabMaxWidth="@dimen/dp_200"
                    app:tabMinWidth="@dimen/dp_30"
                    app:tabMode="scrollable"
                    app:tabPaddingEnd="@dimen/dp_10"
                    app:tabPaddingStart="@dimen/dp_10"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="?android:attr/textColor"
                    app:tabTextColor="?android:attr/textColorTertiary" />

                <com.palliums.widget.NoSlideViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_10" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.palliums.widget.refresh.DefaultRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>