<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--状态布局-->
    <declare-styleable name="StatusLayout">
        <attr name="slEmptyTip" format="string" />
        <attr name="slEmptyIcon" format="reference" />
        <attr name="slFailureTip" format="string" />
        <attr name="slFailureIcon" format="reference" />
        <attr name="slNoNetworkTip" format="string" />
        <attr name="slNoNetworkIcon" format="reference" />
        <attr name="slTipsTextSize" format="dimension" />
        <attr name="slTipsTextColor" format="color" />
        <attr name="slReloadText" format="reference" />
        <attr name="slReloadTextSize" format="dimension" />
        <attr name="slReloadTextColor" format="color" />
        <attr name="slShowReloadOnFailed" format="boolean" />
        <attr name="slStatus" format="enum">
            <enum name="none" value="1" />
            <enum name="loading" value="2" />
            <enum name="empty" value="3" />
            <enum name="failure" value="4" />
            <enum name="no_network" value="5" />
        </attr>
    </declare-styleable>

    <!--公共的菜单栏-->
    <declare-styleable name="MenuItemView">
        <attr name="mivShowEndArrow" format="boolean" />
        <attr name="mivShowEndSwitch" format="boolean" />
        <attr name="mivShowTopLine" format="boolean" />
        <attr name="mivShowBottomLine" format="boolean" />
        <attr name="mivDividingLineColor" format="color" />
        <attr name="mivStartIcon" format="reference" />
        <attr name="mivStartTitleText" format="string" />
        <attr name="mivStartTitleTextSize" format="dimension" />
        <attr name="mivStartTitleTextColor" format="color" />
        <attr name="mivStartDescText" format="string" />
        <attr name="mivStartDescTextSize" format="dimension" />
        <attr name="mivStartDescTextColor" format="color" />
        <attr name="mivEndIcon" format="reference" />
        <attr name="mivEndArrow" format="reference" />
        <attr name="mivEndDescText" format="string" />
        <attr name="mivEndDescTextSize" format="dimension" />
        <attr name="mivEndDescTextColor" format="color" />
        <attr name="mivEndDescDrawableLeft" format="reference" />
        <attr name="mivEndDescDrawablePadding" format="dimension" />
        <attr name="mivEndDescGravity" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <!--A fast ImageView that supports rounded corners and circles.-->
    <declare-styleable name="NiceImageView">
        <attr name="is_circle" format="boolean" />
        <attr name="is_cover_src" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
    </declare-styleable>

</resources>