<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/def_activity_vice_bg"
    tools:context=".ui.backup.ShowMnemonicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/page_spacing_left"
        android:paddingEnd="@dimen/page_spacing_right">

        <TextView
            android:id="@+id/tv_show_mnemonic_desc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/show_mnemonic_content_01"
            android:textColor="@color/def_text_font_black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/fl_show_mnemonic_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_33"
            android:background="@drawable/shape_rectangle_white"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_22"
            android:paddingBottom="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_show_mnemonic_desc_1" />

        <LinearLayout
            android:id="@+id/vTipsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/shape_rectangle_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/fl_show_mnemonic_words">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@mipmap/ic_no_photography" />

            <TextView
                android:id="@+id/tv_show_mnemonic_desc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_22"
                android:layout_marginBottom="@dimen/dp_12"
                android:lineSpacingExtra="@dimen/dp_5"
                android:text="@string/show_mnemonic_content_02" />

        </LinearLayout>

        <Button
            android:id="@+id/tv_show_mnemonic_next_step"
            style="@style/BaseButtonPrimary"
            android:layout_width="@dimen/dp_238"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_72"
            android:layout_marginBottom="@dimen/dp_205"
            android:text="@string/btn_next_step"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vTipsContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>