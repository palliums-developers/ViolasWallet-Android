<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.backup.ConfirmMnemonicActivity"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_confirm_mnemonic_desc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/confirm_mnemonic_content_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/fl_confirm_mnemonic_words_sel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205"
        android:layout_marginLeft="@dimen/page_spacing_left"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/page_spacing_right"
        android:padding="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_mnemonic_desc_1" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/fl_confirm_mnemonic_words"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205"
        android:layout_marginLeft="@dimen/page_spacing_left"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/page_spacing_right"
        android:padding="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_confirm_mnemonic_words_sel" />

    <Button
        android:id="@+id/tv_confirm_mnemonic_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_btn_margin_bottom"
        android:padding="@dimen/dp_20"
        android:text="@string/btn_complete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_confirm_mnemonic_words" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>