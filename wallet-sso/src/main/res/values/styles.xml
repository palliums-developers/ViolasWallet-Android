<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">none</item>
        <item name="android:windowAnimationStyle">@style/AppWindowAnimation</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowAnimationStyle">@style/LauncherWindowAnimation</item>
    </style>

    <style name="AppTheme.Launcher.Translucent">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowAnimationStyle">@style/MainWindowAnimation</item>
    </style>

    <style name="AppTheme.ScanLogin">
        <item name="android:windowAnimationStyle">@style/ScanLoginWindowAnimation</item>
    </style>

    <style name="Style_Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@null</item>
    </style>

    <style name="AppWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
    </style>

    <style name="LauncherWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_fade_out</item>
    </style>

    <style name="MainWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="ScanLoginWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_bottom_out</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/dp_238</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseButtonDeputy" parent="BaseButton">
        <item name="android:background">@drawable/selector_btn_bg_deputy</item>
    </style>

    <style name="BaseButtonPrimary" parent="BaseButton">
        <item name="android:background">@drawable/selector_btn_bg_primary</item>
    </style>

    <style name="BaseSwitchButton">
        <item name="BackDrawable">@drawable/selector_bg_switch</item>
        <item name="ThumbDrawable">@drawable/shape_bg_switch_thumb</item>
        <item name="ThumbMarginBottom">0dp</item>
        <item name="ThumbMarginLeft">0dp</item>
        <item name="ThumbMarginRight">0dp</item>
        <item name="ThumbMarginTop">0dp</item>
    </style>

    <style name="MenuItemView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="android:paddingStart">@dimen/dp_14</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:background">@drawable/bg_menu_item</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="mivStartTitleTextSize">@dimen/sp_16</item>
        <item name="mivStartTitleTextColor">@color/def_text_title</item>
        <item name="mivStartDescTextSize">@dimen/sp_12</item>
        <item name="mivStartDescTextColor">@color/def_text_desc</item>
        <item name="mivEndDescTextSize">@dimen/sp_16</item>
        <item name="mivEndDescTextColor">@color/def_text_key</item>
        <item name="mivDividingLineColor">@color/dividing_line</item>
        <item name="mivEndArrow">@mipmap/ic_right_arrow_gray</item>
    </style>

    <style name="MenuItemView.About">
        <item name="mivShowEndArrow">false</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/def_text_title</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/def_text_hint</item>
        <item name="android:background">@drawable/selector_edit_bg_line</item>
        <item name="android:layout_height">@dimen/dp_55</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="EditText.Code">
        <item name="android:inputType">number</item>
        <item name="android:digits">
            "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        </item>
    </style>

    <style name="VerificationCode" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/sel_color_get_verification_code</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:text">@string/get_verification_code</item>
        <item name="android:background">@drawable/sel_bg_get_verification_code</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/dp_9</item>
        <item name="android:paddingBottom">@dimen/dp_9</item>
        <item name="android:paddingStart">@dimen/dp_11</item>
        <item name="android:paddingEnd">@dimen/dp_11</item>
        <item name="android:minWidth">@dimen/dp_76</item>
    </style>

</resources>
