<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/dp_100" />
            <stroke android:width="@dimen/dp_1" android:color="@color/colorAccent" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:tint="@color/view_pressed_tint" android:tintMode="multiply">
            <corners android:radius="@dimen/dp_100" />
            <gradient android:endColor="@color/colorAccent" android:startColor="@color/colorPrimary" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/dp_100" />
            <gradient android:endColor="@color/colorAccent" android:startColor="@color/colorPrimary" />
        </shape>
    </item>

</selector>