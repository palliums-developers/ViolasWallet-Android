<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.selection.AccountSelectionActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wallet_account_navigation"
        android:layout_width="@dimen/dp_78"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never"
        android:paddingTop="@dimen/dp_11"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_account_label" />

    <FrameLayout
        android:id="@+id/vp_wallet_account_container"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rv_wallet_account_navigation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>