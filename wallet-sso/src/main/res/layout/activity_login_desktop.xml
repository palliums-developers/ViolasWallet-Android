<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/def_page_bg_light_secondary"
    tools:context=".ui.desktopManagement.LoginDesktopActivity">

    <ImageView
        android:id="@+id/ivDeskIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_desk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/tvScanLoginDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:text="@string/desc_scan_login"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDeskIcon"
        app:layout_constraintVertical_bias="0.44" />

    <EditText
        android:id="@+id/etLoginPwd"
        android:layout_width="@dimen/dp_238"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/selector_edit_bg_scan_login"
        android:hint="@string/hint_input_login_pwd"
        android:inputType="textPassword"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        android:textColor="@color/def_text_title"
        android:textColorHint="@color/color_3C3848_50"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/tvLoginPwdErrorTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/tips_login_pwd_error"
        android:textColor="@color/color_F74E4E"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/etLoginPwd"
        app:layout_constraintTop_toBottomOf="@id/etLoginPwd"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnConfirmLogin"
        style="@style/BaseButtonPrimary"
        android:layout_marginTop="@dimen/dp_38"
        android:text="@string/action_confirm_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLoginPwd" />

    <TextView
        android:id="@+id/tvCancelLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:padding="@dimen/dp_15"
        android:text="@string/action_cancel_login"
        android:textColor="@color/selector_text_gray"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnConfirmLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>