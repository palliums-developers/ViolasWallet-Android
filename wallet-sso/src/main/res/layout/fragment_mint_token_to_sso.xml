<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/white"
    tools:context=".ui.governorApproval.approvalMintToken.MintTokenToSSOFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_token_application_status" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_6"
            android:background="@color/color_F7F7F9" />

        <include layout="@layout/layout_approval_mint_token_info" />

        <Button
            android:id="@+id/btnMint"
            style="@style/BaseButtonPrimary"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_47"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/action_confirm_mint" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>